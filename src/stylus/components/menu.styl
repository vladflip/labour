$active
    background-color $blue
    width 100%

.menu
    width 200px
    list-style none
    padding 0
    margin 0
    
    &-item
        color $blue
        font-weight 400
        letter-spacing 1px
        text-align right
        position relative 
        
        &:after
            content ''
            display block
            position absolute
            right 0
            bottom 0
            background-color lighten($blue, 60%)
            width 30px
            height 1px
            transition width 300ms ease-in-out, color 300ms ease-in-out
            
        &:hover&:after
            @extends $active
        
        &.current-menu-item
            &:after
                @extends $active

        &-link
            padding 13px 0
            color inherit
            text-decoration none
            display block
        
    &-item > &-sub
        display none