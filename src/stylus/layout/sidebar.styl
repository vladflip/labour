.sidebar
	display flex
	flex-direction column
	align-items center
	width 300px
	margin-top 10px
	
	&-header
		font-weight 400
		text-transform uppercase
		font-family Roboto
	
	&-item
		a
			display flex
			align-items center
			width 100%
		padding 10px 15px
		cursor pointer
		color $blue
		border-bottom 1px solid $blue
		width 100%
		
		transition background-color 300ms
		
		padding-top 15px
		padding-bottom 15px
		
		&:last-child
			border-bottom 0
		
		&:hover
			background-color lighten($blue, 90%)
		
		&-name
			color inherit
			font-weight 500
			font-size 14px
			margin-left 10px
			line-height 25px
			width 170px
			flex 1
		
		&-icon
			background-position center 
			background-repeat no-repeat
			background-size contain
			height 60px
			width 60px

			&--alone
				width 100%