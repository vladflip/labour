.hero
	height 300px
	padding 20px 0
	// background url(../img/pattern.png)
	// background-color lighten($lightblue, 95%)
	
	.container
		display flex
		height 100%
		align-items center
		justify-content space-between
	
	&-crest
		height 190px
		width 150px
		background url(../img/crest.png) center no-repeat
		background-size 100%
	
	&-text
		&-sign,
		&-name
			text-align center
			color $blue

		&-sign
			font-size 35px
			line-height 35px
			font-weight 500
		
		&-name
			margin-top 20px
			line-height 25px
			font-size 15px
			font-weight 300
			
	
	&-search
		position relative
		
		&-icon
			position absolute
			right 5px
			top 27%
			color #777
		&-input
			background-color rgba(255,255,255,.7)
			border-radius 4px
			border none
			outline none
			padding 8px 30px 8px 14px
			for prefix in '::-webkit-input-' ':-ms-input-' '::-moz-' ':-moz-'
				&{prefix}placeholder
					color #777 !important
			
			transition background-color 250ms
			
			&:focus
				background-color rgba(255,255,255,.99)